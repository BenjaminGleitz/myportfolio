{% extends 'base.html.twig' %}

{% block title %}Benjamin Gleitz !{% endblock %}

{% block body %}

<section class="content">

    <div class="container project-details__container">
        <div class="project-details__container--left">
            <h2>{{ project.title }}</h2>
            <p>{{ project.description }}</p>
            <p><em> {% for language in project.language %}
                - {{ language.name }}
            {% endfor %} -</em></p>
        </div>
        <div class="project-details__container--right">
            <img class="project-details__card--img" src="{{ asset('images/' ~ project.image) }}" alt="">
        </div>
    </div>

    <em><a class="return-project-list" href="{{ path('project_index') }}"> <i class="fa-solid fa-arrow-left"></i> Liste des projets</a></em>

</section>

{% endblock %}
